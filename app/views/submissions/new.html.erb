<head>
  <title>Submit | Hackers News</title>
</head>
<body>
  <center>
    <table bgcolor="#f6f6ef" border="0" cellpadding="0" cellspacing="0" width="85%">
      <tbody>
        <tr>
          <td bgcolor="ff6600">
            <table style="padding=2px" border="0" cellpadding="0" cellspacing="0" width="100%">
              <tbody>
                <tr>
                  <td style="width:18px;padding-right:4px">
                    <a href="/"><img src="<%= asset_path( 'y18.gif' ) %>"></img></a>
                  </td>
                  <td class="header">
                    <font size="4"> <b><a href="/">Hacker News</a></b>
                                    </font><font size="3"> <a href="/">new</a> | <a href="/ask">ask</a> | <a href="/submissions/new"></a><font color="white">submit</font></font>
                  </td>
                  <td>
                    <font size="3">
                      <div align="right">
                        <% if current_user %>
                          Signed in as <strong><%= current_user.name %></strong>!
                          <%= link_to "Sign out", signout_path, id: "sign_out" %>
                          <% else %>
                          <%= link_to "Log in", "/auth/google_oauth2", id: "sign_in" %>
                          <% end %>
                      </div>
                    </font>
                  </td>
                  <td class="spacer" style="width:10px"></td>
                </tr>
              </tbody>
            </table>
          </td>
        </tr>
        <tr style="height:10px"></tr>
        <tr>
          <td>
            <table>
              <tbody>
                <tr class="spacer" style="height:5px"></tr>
                
                <div style="margin-left:20px">
                  <%= render 'form' %>
                </div>
                
              </tbody>
            </table>
          </td>
        </tr>

      </tbody>
    </table>
  </center>
</body>