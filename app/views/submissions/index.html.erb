<head>
</head>

<body>
  <center>
    <table bgcolor="#f6f6ef" border="0" cellpadding="0" cellspacing="0" width="85%">
      <tbody>
        <tr>
          <td bgcolor="ff6600">
            <table style="padding=2px" border="0" cellpadding="0" cellspacing="0" width="100%">
              <tbody>
                <tr>
                  <td style="width:18px;padding-right:4px">
                    <img src="<%= asset_path( 'y18.gif' ) %>"></img>
                  </td>
                  <td>
                    <font size="4"><b>Hacker News</b></font>
                  </td>
                </tr>
              </tbody>
            </table>
          </td>
        </tr>
        <tr style="height:10px"></tr>
        <tr>
          <td>
            <table>
              <tbody>
                <% @submissions.each do |submission| %>
                <tr>
                  <td><font color="grey" size="3"><%= submission.id %>. <font color="black" size="3"><a href=<%= submission.url %>><%= submission.title %></a></font> </font> <font color="grey" size="2">(<%= submission.url %>)</font></td>
                </tr>
                <tr>
                  <td>
                    <font color="grey" size="2">
                      0 points by <a href="/users/<%= submission.user_id %>"><%= submission.user.name %></a>
                      <a href="/submissions/<%= submission.id %>"><%=( (Time.now() - submission.created_at)/3600).round %> hours ago</a> | <a href="/submissions/<%= submission.id %>">0</a> comments
                    </font>
                  </td>
                </tr>
                <tr class="spacer" style="height:5px"></tr>
                <% end %>                
              </tbody>
            </table>
          </td>
        </tr>

      </tbody>
    </table>
  </center>
</body>