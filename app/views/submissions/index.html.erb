<head>
</head>

<body>
  <center>
    <table bgcolor="#f6f6ef" border="0" cellpadding="0" cellspacing="0" width="85%">
      <tbody>
        <tr>
          <td bgcolor="ff6600">
            <table style="padding=2px" border="0" cellpadding="0" cellspacing="0" width="100%">
              <tbody>
                <tr>
                  <td style="width:18px;padding-right:4px">
                    <img src="<%= asset_path( 'y18.png' ) %>" style="border:lpx white solid;" height="18" width="18"></img>
                  </td>
                  <td>
                    <font size="4"><b>Hacker News</b></font>
                  </td>
                </tr>
              </tbody>
            </table>
          </td>
        </tr>
        <tr style="height:10px"></tr>
        <tr>
          <td>
            <table>
              <tbody>
                <% @submissions.each do |submission| %>
                <tr>
                  <td><font color="grey"><%= submission.id %>. <font color="black"><%= submission.title %></font> </font> <font color="grey">(<%= submission.url %>)</font></td>
                </tr>
                <tr>
                  <td><font color="grey">0 points by <%= submission.user_id %> <%=( (Time.now() - submission.created_at)/3600).round %> hours ago | 0 comments</font></td>
                </tr>
                <tr class="spacer" style="height:5px"></tr>
                <% end %>                
              </tbody>
            </table>
          </td>
        </tr>

      </tbody>
    </table>
  </center>
</body>