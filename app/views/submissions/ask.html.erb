<head>
  <title>Ask | Hackers News</title>
</head>
<body>
  <center>
    <table bgcolor="#f6f6ef" border="0" cellpadding="0" cellspacing="0" width="85%">
      <tbody>
        <tr>
          <td bgcolor="ff6600">
            <table style="padding=2px" border="0" cellpadding="0" cellspacing="0" width="100%">
              <tbody>
                <tr>
                  <td style="width:18px;padding-right:4px">
                    <a href="/"><img src="<%= asset_path( 'y18.gif' ) %>"></img></a>
                  </td>
                  <td class="header">
                    <font size="4"> <b><a href="/">Hacker News</a></b>
                                    </font><font size="3"> <a href="/">new</a> | <a href="/ask"><font color="white">ask</font></a> | <a href="/submissions/new">submit</a></font>
                  </td>
                  <td>
                    <font size="3">
                      <div align="right">
                        <% if current_user %>
                          Signed in as <strong>
                            <%= link_to current_user.name, "/users/#{current_user.id}", id: "my_profile" %>
                            </strong> | 
                          <%= link_to "Sign out", signout_path, id: "sign_out" %>
                          <% else %>
                          <%= link_to "Log in", "/auth/google_oauth2", id: "sign_in" %>
                          <% end %>
                      </div>
                    </font>
                  </td>
                  <td class="spacer" style="width:10px"></td>
                </tr>
              </tbody>
            </table>
          </td>
        </tr>
        <tr style="height:10px"></tr>
        <tr>
          <td>
            <table>
              <tbody>
                <% i=1 %>
                <% @submissions.each do |submission| %>
                <% if submission.url == ""%>
                <tr>
                  <td><font color="grey" size="3"><%= i %>. <font color="black" size="3"><a href=<%= submission.url %>><%= submission.title %></a></font> </font></td>
                </tr>
                <tr>
                  <td>
                    <font color="grey" size="2">
                      0 points by <a href="/users/<%= submission.user_id %>"><%= submission.user.name %></a>
                      <a href="/submissions/<%= submission.id %>"><%=( (Time.now() - submission.created_at)/3600).round %> hours ago</a> | <a href="/submissions/<%= submission.id %>"><%= Comment.where('submission_id = ?', submission.id).length %></a> comments
                    </font>
                  </td>
                </tr>
                <tr class="spacer" style="height:5px"></tr>
                <% i += 1 %>
                <% end %>
                <% end %>                
              </tbody>
            </table>
          </td>
        </tr>

      </tbody>
    </table>
  </center>
</body>